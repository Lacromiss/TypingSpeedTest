@{
    ViewData["Title"] = "Kayıt Ol";
}

<style>
    /* Sayfanın genel arkaplanı ve yazı tipi */
    body {
        /* Hafif bir arkaplan gradienti ile tasarıma derinlik katıyoruz */
        background: linear-gradient(120deg, #eef2f3, #f0f5f8);
        font-family: 'Segoe UI', 'Roboto', sans-serif;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        margin: 0;
    }

    .register-container {
        max-width: 450px;
        width: 100%;
        padding: 45px;
        background-color: #ffffff;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12);
        border-top: 5px solid #1E88E5;
        position: relative;
        overflow: hidden;
    }

        .register-container h2 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 40px;
            font-weight: 700;
            font-size: 28px;
        }

    .form-group {
        position: relative; 
        margin-bottom: 30px;
    }

        /* İkon Stilleri */
        .form-group .icon {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            color: #95a5a6;
            transition: color 0.3s;
        }

    .form-control {
        width: 100%;
        padding: 14px 15px 14px 50px; 
        border: 2px solid #dfe6e9;
        border-radius: 10px;
        box-sizing: border-box;
        background-color: #f9fafb;
        color: #34495e;
        font-size: 16px;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #1E88E5;
            outline: none;
        }

            .form-control:focus + .icon {
                color: #1E88E5;
            }

    .form-group label {
        position: absolute;
        top: 15px;
        left: 50px;
        color: #95a5a6;
        pointer-events: none; 
        transition: all 0.3s ease;
    }

    .form-control:focus ~ label,
    .form-control:not(:placeholder-shown) ~ label {
        top: -12px;
        left: 15px;
        font-size: 12px;
        color: #1E88E5;
        background-color: white;
        padding: 0 5px;
    }

    .form-control:-webkit-autofill {
        -webkit-box-shadow: 0 0 0 30px #f9fafb inset !important;
        -webkit-text-fill-color: #34495e !important;
    }

        .form-control:-webkit-autofill:focus {
            -webkit-box-shadow: 0 0 0 30px #f9fafb inset, 0 0 0 9999px #1E88E500;
        }


    .btn-primary {
        background: linear-gradient(45deg, #1E88E5, #29B6F6);
        color: white;
        border: none;
        padding: 16px 20px;
        width: 100%;
        border-radius: 10px;
        font-size: 18px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.35s ease;
        box-shadow: 0 5px 15px rgba(30, 136, 229, 0.4);
        margin-top: 10px;
    }

        .btn-primary:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 25px rgba(30, 136, 229, 0.5);
            background: linear-gradient(45deg, #2296f3, #3ac3fe);
        }

    .text-danger {
        background-color: #fff2f2;
        border: 1px solid #ff7272;
        color: #d8000c;
        border-radius: 8px;
        padding: 15px;
        margin-top: 25px;
    }

        .text-danger p {
            margin: 0;
            font-size: 14px;
        }
</style>

<div class="register-container">
    <h2>Kayıt Ol</h2>

    <form asp-action="Register" method="post">
        <div class="form-group">
            <input name="username" class="form-control" required placeholder=" " />
            <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z" />
            </svg>
            <label>Kullanıcı Adı</label>
        </div>

        <div class="form-group">
            <input name="email" type="email" class="form-control" required placeholder=" " />
            <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414zM0 4.697v7.104l5.803-3.558zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586zm3.436-.586L16 11.801V4.697z" />
            </svg>
            <label>Email</label>
        </div>

        <div class="form-group">
            <input name="password" type="password" class="form-control" required placeholder=" " />
            <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2" />
            </svg>
            <label>Şifre</label>
        </div>

        <button type="submit" class="btn btn-primary">Kayıt Ol</button>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
</div>